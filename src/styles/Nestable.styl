@import 'nib'

.nestable
  position relative
  .nestable-list
    margin 0
    padding 0
    list-style-type none
    display flex
    width 100%
  > .nestable-list
    padding 0
    display block
    width 100%

.nestable-item
.nestable-item-copy
  margin 10px 0 0
  &:first-child
    margin-top 0
  .nestable-list
    margin-top 10px
  &--children-no-collapse
    .nestable-item-icon
      cursor inherit

.nestable-item-name {
  height: 100%
  width: 100%
}

.nestable-item
.nestable-item-copy
  width 100%
  margin-top: 20px;
  .nestable-list
    margin-top 0

ol .nestable-list > .nestable-item {
  margin-top: 0;
}


.nestable-item
  position relative
  &.is-dragging
    .nestable-list
      pointer-events none
    *
      opacity 0
    &:before
      content ' '
      absolute top left
      right 0
      bottom 0
      background skyblue
      border 1px dashed steelblue
      border-radius 5px

.nestable-item-icon
  margin-right 5px
  cursor pointer

.nestable-drag-layer
  fixed top left
  z-index 100
  pointer-events none
  > .nestable-list
    absolute top left
    padding 0
